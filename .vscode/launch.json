{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Holefeeder.Ui.Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Holefeeder.Ui.Web/bin/Debug/net8.0/BlazorApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Holefeeder.Ui.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Holefeeder.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Holefeeder.Api/bin/Debug/net8.0/Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Holefeeder.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Holefeeder.Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Holefeeder.Web/bin/Debug/net8.0/Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Holefeeder.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Meteor Debugger",
            "type": "dotnet-meteor.debugger",
            "request": "launch",
            "preLaunchTask": "dotnet-meteor: build"
        },
        {
            "name": "Blazor Debug",
            "type": "blazorwasm",
            "request": "launch",
            "url": "https://localhost:7172",
            "webRoot": "${workspaceFolder}/bin/Debug/net8.0/wwwroot"
        },
        {
            "name": "Launch and Debug Blazor WebAssembly",
            "type": "blazorwasm",
            "request": "launch",
            "browser": "edge",
            "cwd": "${workspaceFolder}/src/Holefeeder.Ui.Web",
            "url": "https://localhost:7172"
        },
        {
            "name": "Watch Holefeeder.Ui.Web",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/Holefeeder.Ui.Web",
            "program": "dotnet",
            "args": [
                "watch",
                "run",
                "--launch-profile",
                "DevServer",
                "--verbose" // Let's us confirm browser connects with hot reload capabilities
            ],
            "preLaunchTask": "build" // Ensure we don't watch an unbuilt site
        },
        {
            "name": "Attach Holefeeder.Ui.Web",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}/src/Holefeeder.Ui.Web",
            "browser": "edge",
            "url": "https://localhost:7172", // Tell launch where to find site
            "timeout": 120000, // Allows time for the site to launch
        }
    ],
    "compounds": [
        {
            "name": "Holefeeder.Ui.Web",
            "configurations": [
                "Watch Holefeeder.Ui.Web",
                "Attach Holefeeder.Ui.Web"
            ]
        }
    ]
}