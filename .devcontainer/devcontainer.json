{
    "name": "Holefeeder Container",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "dockerComposeFile": [
        "../docker-compose.yaml",
        "../docker-compose.Devcontainer.yaml"
